---
import { siteConfig } from '@/data/site.config'
import XColorIcon from '@/components/icons/XColorIcon'
import LinkedinColorIcon from '@/components/icons/LinkedinColorIcon'
const message = siteConfig.shareMessage

const URL = Astro.url.href
---

<div class='flex flex-col gap-2'>
	<span class='mb-1 font-bold text-2xl'>Share</span>
	<ul class='flex gap-3 text-black dark:text-white'>
		<li>
			<a
				href={`https://x.com/intent/tweet?text=${message + ' ' + URL}`}
				aria-label='Share on X'><XColorIcon /></a
			>
		</li>
		<li>
			<a
				href={`https://www.linkedin.com/shareArticle?mini=true&url=${URL}`}
				aria-label='Share on LinkedIn'
			>
				<LinkedinColorIcon /></a
			>
		</li>
	</ul>
</div>
